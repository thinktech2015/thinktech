
<% if @article.errors.any? %>
  <ul>
    <%= @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @article do |f| %>
  
  <div class="form-group">   
    <%= f.label :'title *' %>
    <%= f.text_field :title, type:"text", tabindex: "1", class: "form-control", placeholder: 'Write the title', autofocus: true , required: true  %>
  </div>
  
  <div class="form-group">
    <%= f.label :'body*' %><br>
    <%= f.cktext_area :body, type:"text", tabindex: "2", class: "form-control",  placeholder: 'Write the description ', rows: "15", required: true  %>
  </div>

  <div class="actions">
    <% if current_page?(new_article_path) %>
    <%= f.submit 'Create Article', tabindex: "3", :class => 'btn btn-primary' %>
    <% else %>
    <%= f.submit 'Update Article', tabindex: "3", :class => 'btn btn-primary' %>
    <% end %>

    <%= link_to "Cancel", articles_path, tabindex: "4", class: "btn btn-primary" %>
  </div>
<% end %>