                
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    
</head>

<body>
    <div class="row">
      <div class="col-sm-2 col-md-3"></div>
        <div class="col-xs-12 col-sm-8 col-md-6 blog-content">
          <h2 class="text-center">Log in</h2>
           <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            
            <div class="form-group">   
              <%= f.label :'email *' %>
              <%= f.email_field :email, type:"text", tabindex: "1", class: "form-control", placeholder: 'Enter your email', autofocus: true , required: true  %>
            </div>

            <div class="form-group">   
              <%= f.label :'password *' %>
              <%= f.password_field :password, type:"password", tabindex: "2", class: "form-control", placeholder: 'Enter your password', autocomplete: "off", required: true  %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit 'Log in', tabindex: "4", :class => 'btn btn-primary' %>
            </div>
          <% end %>
          
          <div class="row pad_top1">
              <div class="col-sm-6">
                <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to "Become a new member", new_registration_path(resource_name), :class => 'btn btn-primary btn-block' %>
                <% end -%>
              </div>

              <div class="col-sm-6">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name), :class => 'btn btn-primary btn-block' %>
                <% end -%>
              </div>
          </div>

        </div>
        <div class="col-sm-2 col-md-3"></div>
    </div> 
</body>
</html>